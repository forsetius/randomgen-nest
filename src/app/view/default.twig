        $(document).ready(function () {
            if (Number($('.content h2').length > 1)) {
                $('#toc .card-body').append(`<ol>`)
                $('.content h2').each(function (k, h) {
                    $(h).attr('id', k);
                    $('#toc .card-body ol').append(`<li><a href="#${k}">${$(h).html()} </a></li>`)
                })
                $('#toc .card-body').append(`</ol>`)
            } 
            if (Number($('#atts .card').length === 0)) { $('#atts').hide() }
        });

    </script>
