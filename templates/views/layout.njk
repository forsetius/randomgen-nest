<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ meta.title }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Unica+One&amp;subset=latin,latin-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Maven+Pro&amp;subset=latin,latin-ext" rel="stylesheet" type="text/css">
      <meta name="robots" content="index,follow"/>

    <base href=/">
    <link rel="alternate" href="/pl" hreflang="x-default"/><link rel="alternate" href="/pl" hreflang="pl"/>
    <link rel="alternate" href="/en" hreflang="en"/><link rel="canonical" href="/en"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link id="theme" rel="stylesheet" type="text/css" href="styles.css" title="theme"/>
    <link rel="icon" type="image/x-icon" href="img/logo-w.png"/>

  </head>
  <body>
    <!-- Navbar -->
    <header>
      {% include 'partials/topbar.njk' %}

      <!-- Title pic -->
      <div id="headerImg" class="bg-custom-primary-light" style="background: url('img/{{ page.headerImage }}') right center; background-size: cover;">
        {% block title %}{% endblock %}
      </div>
      <div id="subheader" class="container-fluid text-light bg-body-secondary" data-bs-theme="dark">
        <div class="row">
          <div id="subheaderLeft" class="col align-middle">{% block subheaderLeft %}{% endblock %}</div>
          <div id="subheaderRight" class="col align-middle">{% block subheaderRight %}{% endblock %}</div>
        </div>
      </div>
    </header>

    <main>
      {% block content %}{% endblock %}
    </main>

    <footer class="bd-footer py-4 bg-body-tertiary" data-bs-theme="dark">
      <div class="container px-4 px-md-3 text-body-secondary">
        {% include 'partials/footer.njk' %}
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
